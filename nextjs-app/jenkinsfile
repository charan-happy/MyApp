pipeline {
    agent any

    tools {
        nodejs 'NodeJS 14'  // Ensure Node.js is installed and configured in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/charan-happy/MyApp.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('nextjs-app') {
                    sh 'npm install'
                }
            }
        }
        stage('Lint') {
            steps {
                dir('nextjs-app') {
                    sh 'npm run lint'
                }
            }
        }
        stage('Build') {
            steps {
                dir('nextjs-app') {
                    sh 'npm run build'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                dir('nextjs-app') {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials-id'){
                        def app = docker.build("charan-happy/nextjs-app")
                        app.push()
                    }
                    }
                }
            }
        }
    }
}
